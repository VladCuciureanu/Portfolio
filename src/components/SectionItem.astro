---
type Props = {
  title: string;
  aside: string;
  href?: string;
};

const { title, aside, href } = Astro.props;
---

<article class="flex flex-col ml-4 sm:ml-0 sm:flex-row flex-grow">
  <aside
    class="text-neutral-400 mr-9 relative whitespace-nowrap min-w-[88px] max-w-[88px]"
  >
    {aside}
  </aside>
  <div class="flex flex-col">
    <a
      class="flex flex-row items-center gap-1 hover:underline mb-1 group"
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      data-hover="true"
    >
      {title}
      {
        href && (
          <svg
            width="12"
            height="12"
            viewBox="0 0 12 12"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform duration-300 ease-in-out"
          >
            <path
              d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4V3ZM8.5 3.5H9C9 3.22386 8.77614 3 8.5 3V3.5ZM8 8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5H8ZM2.64645 8.64645C2.45118 8.84171 2.45118 9.15829 2.64645 9.35355C2.84171 9.54882 3.15829 9.54882 3.35355 9.35355L2.64645 8.64645ZM3.5 4H8.5V3H3.5V4ZM8 3.5V8.5H9V3.5H8ZM8.14645 3.14645L2.64645 8.64645L3.35355 9.35355L8.85355 3.85355L8.14645 3.14645Z"
              fill="#111"
            />
          </svg>
        )
      }
    </a>
    <slot />
  </div>
</article>
